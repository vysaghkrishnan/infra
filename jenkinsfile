pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                git branch: 'main', credentialsId: 'GITHUB', url: 'git@github.com:vysaghkrishnan/infra.git'
                echo 'Hello World'
                
                 stage('terraform') {
                        steps {
                            sh './terraformw apply -auto-approve -no-color'
      }
    }
        
        }
            }
        }
    }

